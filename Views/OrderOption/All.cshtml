@model List<deAndrade_Project_III.Models.OrderOption>
@{
    ViewBag.Title = " - Order Options";
}

<h2>Order Options's List</h2>

<div id="search" class="">
    <input type="text" id="txtSearch" class="form-control" placeholder="Search">
    <button class="btn btn-default" type="button" disabled>Search</button>
</div>

<div id="new-customer" class="">
    <a class="btn btn-default" disabled>Add new order option</a>
</div>

<div>
    Since this page contains administrative information that can impact ALL invoices registered, please contact the administrator if you want to change its content.
    <br />
    <br />
</div>

<table class="table table-hover">
    <thead class="thead-light">
        <tr>
            <th><span class="theader">Sales Tax Rate</span></th>
            <th><span class="theader">First Book Ship Charge</span></th>
            <th><span class="theader">Additional Book Ship Charge</span></th>
            <th><span class="theader">Actions</span></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var orderOption in Model)
        {
            <tr>
                <td>@orderOption.SalesTaxRate</td>
                <td>@orderOption.FirstBookShipCharge</td>
                <td>@orderOption.AdditionalBookShipCharge</td>
                <td>
                    @{ string id = @orderOption.SalesTaxRate.ToString() + "-" + @orderOption.FirstBookShipCharge.ToString() + "-" + @orderOption.AdditionalBookShipCharge.ToString(); }
                    <span class="far fa-edit" title="Edit"></span>&nbsp;&nbsp;
                    <span class="far fa-trash-alt" title="Delete"></span>
                </td>
            </tr>
         }
    </tbody>
</table>