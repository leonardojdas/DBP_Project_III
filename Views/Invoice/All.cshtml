@model List<deAndrade_Project_III.Models.Invoice>
@{
    ViewBag.Title = " - Invoices";
}

<h2>Invoice's List</h2>

<div id="search" class="">
    <input type="text" id="txtSearch" class="form-control" placeholder="Search">
    <button class="btn btn-default" type="button" onclick="new Book().Search()">Search</button>
</div>

<div id="new-customer" class="">
    <a class="btn btn-default" onclick="new Book().Upsert();">Add new invoice</a>
</div>

<table class="table table-hover">
    <thead class="thead-light">
        <tr>
            <th><span class="theader">ID</span></th>
            <th><span class="theader">Customer Name</span></th>
            <th><span class="theader">Invoice Date</span></th>
            <th><span class="theader">Product Total</span></th>
            <th><span class="theader">Sales Tax</span></th>
            <th><span class="theader">Shipping</span></th>
            <th><span class="theader">Invoice Total</span></th>
            <th><span class="theader">Actions</span></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var invoice in Model)
        {
            <tr>
                <td>@invoice.InvoiceID</td>
                <td>@invoice.Customer.Name</td>
                <td>@invoice.InvoiceDate.ToString("MM/dd/yyyy")</td>
                <td>@invoice.ProductTotal.ToString("f2")</td>
                <td>@invoice.SalesTax.ToString("f2")</td>
                <td>@invoice.Shipping.ToString("f2")</td>
                <td>@invoice.InvoiceTotal.ToString("f2")</td>
                <td>
                    <span class="far fa-edit" onclick="new Book().Upsert('@invoice.InvoiceID');" title="Edit"></span>&nbsp;&nbsp;
                    <span class="far fa-trash-alt" onclick="new Book().ApiHandler('DELETE', '@invoice.InvoiceID');" title="Delete"></span>
                </td>
            </tr>
        }
    </tbody>
</table>