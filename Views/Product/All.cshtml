@model List<deAndrade_Project_III.Models.Product>
@{
    ViewBag.Title = " - Products";
}

<h2>Product's List</h2>

<div id="search" class="">
    <input type="text" id="txtSearch" class="form-control" placeholder="Search">
    <button class="btn btn-default" type="button" onclick="new Book().Search()">Search</button>
</div>

<div id="new-customer" class="">
    <a class="btn btn-default" onclick="new Book().Upsert();">Add new product</a>
</div>

<table class="table table-hover">
    <thead class="thead-light">
        <tr>
            <th><span class="theader">Product Code</span></th>
            <th><span class="theader">Description</span></th>
            <th><span class="theader">Unit Price</span></th>
            <th><span class="theader">On Hand Quantity</span></th>
            <th><span class="theader">Actions</span></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
        <tr>
            <td>@product.ProductCode</td>
            <td>@product.Description</td>
            <td>$@product.UnitPrice.ToString("f2")</td>
            <td>@product.OnHandQuantity</td>
            <td>
                <span class="far fa-edit" onclick="new Book().Upsert('@product.ProductCode');" title="Edit"></span>&nbsp;&nbsp;
                <span class="far fa-trash-alt" onclick="new Book().ApiHandler('DELETE', '@product.ProductCode.Trim()');" title="Delete"></span>
            </td>
        </tr>
        }
    </tbody>
</table>